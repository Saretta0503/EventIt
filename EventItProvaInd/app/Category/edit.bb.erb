<div id="pageTitle">
		<h1>Edit <%= @category.id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @category.object %>
    <%= link_to "Delete", :action => :delete, :id => @category.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @category.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Id: </td>
              			<td class="itemValue"><input type="text" name="category[id]" value="<%= @category.id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="category[name]" value="<%= @category.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="category[description]" value="<%= @category.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Parentid: </td>
              			<td class="itemValue"><input type="text" name="category[parentId]" value="<%= @category.parentId %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
