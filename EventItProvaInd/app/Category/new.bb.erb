<div id="pageTitle">
    <h1>New Category</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @category.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Id: </td>
    			  <td class="itemValue"><input type="text" name="category[id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Name: </td>
    			  <td class="itemValue"><input type="text" name="category[name]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Description: </td>
    			  <td class="itemValue"><input type="text" name="category[description]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Parentid: </td>
    			  <td class="itemValue"><input type="text" name="category[parentId]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>